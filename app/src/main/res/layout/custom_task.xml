<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/shadow_border"
    android:layout_marginBottom="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_task_name"
        android:text="Task name"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:layout_marginBottom="4dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_task_time_date"
        android:text="8:29, July 1"
        android:textColor="@color/colorBlack"
        android:textSize="13sp"
        android:layout_below="@+id/tv_task_name"
        />

    <ImageView
        android:id="@+id/iv_task_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_cyan"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/switch_active"/>

        <Switch
            android:id="@+id/switch_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/iv_task_share"
            android:checked="true"
            style="@style/SwitchCompatTheme"
            />



    <ImageView
        android:id="@+id/iv_task_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share_cyan"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>



</RelativeLayout>